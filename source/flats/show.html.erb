<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%=flat.city_slug%>'); height: 50vh; background-position:center" >
</div>

<div class="wrapper-white">
  <div class="container">

  <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="card-flat">
          <div class="card-flat-img text-center">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
            <p><%= flat.name %></p>
          </div>
          <div class="card-flat-content">
            <h1><%= flat.description %></h1>
            <p><%= flat.city_name %></p>
            <p><%= flat.rating %></p>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-md-6">

        <div class="wrapper-grey">
          <h3>Book this flat</h1>
          <div class="form-checking text-center">
            <form action="">
              <div class="check text-center">
                <div class="form-group box-check" id="checkin">
                  <input type="text" placeholder="checkin" class="form-control">
                </div>
                <div class="form-group box-check">
                  <input type="text" placeholder="checkout" class="form-control">
                </div>
              </div>
              <div class="form-group">
                <select id="favorite" name="language" class="form-control">
                  <option value="1-guest">1 guest</option>
                  <option value="2-guests">2 guests</option>
                  <option value="3-guests">3 guests</option>
                </select>
              </div>
              <input type="submit" value="Book it" class="btn btn-danger form-control">

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="wrapper-grey">
  <div class="container">
    <div class="flat-details">
    <div class="flat-description">
      <h5>About this flat</h5>
      <p><%= flat.about %></p>
    </div>
    <div class="flat-space">
      <p>The Space</p>
      <p>Accomodates: <%= flat.max_guests %></p>
      <p>Bathrooms: <%= flat.bathroom %></p>
      <p>Bed type: <%= flat.bed_type %></p>
      <p>Bedrooms: <%= flat.bedroom %></p>
      <p>Beds: <%= flat.bed %></p>
      <p>Property type: <%= flat.property_type %></p>
      <p>Room type : <%= flat.room_type %></p>
    </div>
    <div class="amenities">


    </div>
</div>
  </div>

</div>
